generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int            @id @default(autoincrement())
  name              String?
  email             String
  phone             String
  accessCode        String         @unique
  role              String         @default("user")
  password          String?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  birthDate         DateTime?
  gender            String?
  currentAddress    String?
  nationality       String?
  idCardPhoto       String?
  emergencyPhone    String?
  medicalHistory    String?
  medicationAllergy String?
}

model RaceCategory {
  id                Int              @id @default(autoincrement())
  name              String           @unique
  imageUrl          String?
  basePrice         Decimal          @db.Decimal(10, 2)
  earlyBirdPrice    Decimal?         @db.Decimal(10, 2)
  tier1Price        Decimal?         @db.Decimal(10, 2)
  tier1Min          Int?             @default(10)
  tier1Max          Int?             @default(29)
  tier2Price        Decimal?         @db.Decimal(10, 2)
  tier2Min          Int?             @default(30)
  tier2Max          Int?
  tier3Price        Decimal?         @db.Decimal(10, 2)
  tier3Min          Int?             @default(60)
  bundlePrice       Decimal?         @db.Decimal(10, 2)
  bundleSize        Int?             @default(4)
  earlyBirdCapacity Int?
  earlyBirdClaims   EarlyBirdClaim[]
  participants      Participant[]
  qrCodes           QrCode[]
}

model JerseyOption {
  id           Int           @id @default(autoincrement())
  size         String        @unique
  price        Decimal       @db.Decimal(10, 2)
  quantity     Int?
  description  String?
  isExtraSize  Boolean       @default(false)
  type         String        @default("adult")
  participants Participant[]
}

model Registration {
  id               Int           @id @default(autoincrement())
  userId           Int
  registrationType String
  groupName        String?
  totalAmount      Decimal       @db.Decimal(10, 2)
  paymentStatus    String        @default("pending")
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  paymentId        Int?
  participants     Participant[]
  qrCodes          QrCode[]
  payment          Payment?      @relation(fields: [paymentId], references: [id])
  user             User          @relation(fields: [userId], references: [id])
}

model Participant {
  id             Int           @id @default(autoincrement())
  registrationId Int
  categoryId     Int?
  jerseyId       Int
  bibNumber      String?
  packClaimed    Boolean       @default(false)
  claimDetails   ClaimDetail[]
  category       RaceCategory? @relation(fields: [categoryId], references: [id])
  jersey         JerseyOption  @relation(fields: [jerseyId], references: [id])
  registration   Registration  @relation(fields: [registrationId], references: [id])
}

model Payment {
  id              Int            @id @default(autoincrement())
  transactionId   String
  proofOfPayment  String?
  status          String         @default("pending")
  paidAt          DateTime?
  amount          Decimal?
  createdAt       DateTime       @default(now())
  proofSenderName String?
  updatedAt       DateTime       @default(now()) @updatedAt
  registrations   Registration[]
}

model QrCode {
  id             Int             @id @default(autoincrement())
  registrationId Int
  categoryId     Int
  qrCodeData     String          @unique
  totalPacks     Int
  maxScans       Int
  scansRemaining Int
  createdAt      DateTime        @default(now())
  category       RaceCategory    @relation(fields: [categoryId], references: [id])
  registration   Registration    @relation(fields: [registrationId], references: [id])
  claims         RacePackClaim[]
}

model RacePackClaim {
  id                Int           @id @default(autoincrement())
  qrCodeId          Int
  claimedBy         String
  packsClaimedCount Int
  claimedAt         DateTime      @default(now())
  claimDetails      ClaimDetail[]
  qrCode            QrCode        @relation(fields: [qrCodeId], references: [id])
}

model ClaimDetail {
  id            Int           @id @default(autoincrement())
  claimId       Int
  participantId Int
  claim         RacePackClaim @relation(fields: [claimId], references: [id])
  participant   Participant   @relation(fields: [participantId], references: [id])
}

model EarlyBirdClaim {
  id         Int          @id @default(autoincrement())
  categoryId Int
  createdAt  DateTime     @default(now())
  category   RaceCategory @relation(fields: [categoryId], references: [id])
}
