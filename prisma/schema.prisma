generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  name          String
  email         String         @unique
  phone         String
  accessCode    String         @unique
  role          String         @default("user")
  password      String?
  createdAt     DateTime       @default(now())
  registrations Registration[]
}

model RaceCategory {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  price        Decimal       @db.Decimal(10, 2)
  participants Participant[]
  qrCodes      QrCode[]
}

model JerseyOption {
  id           Int           @id @default(autoincrement())
  size         String        @unique
  price        Decimal       @db.Decimal(10, 2)
  quantity     Int
  participants Participant[]
}

model Registration {
  id               Int           @id @default(autoincrement())
  userId           Int
  registrationType String
  groupName        String?
  totalAmount      Decimal       @db.Decimal(10, 2)
  paymentStatus    String        @default("pending")
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  participants     Participant[]
  payments         Payment[]
  qrCodes          QrCode[]
  user             User          @relation(fields: [userId], references: [id])
}

model Participant {
  id             Int           @id @default(autoincrement())
  registrationId Int
  categoryId     Int
  jerseyId       Int
  bibNumber      String?
  packClaimed    Boolean       @default(false)
  claimDetails   ClaimDetail[]
  category       RaceCategory  @relation(fields: [categoryId], references: [id])
  jersey         JerseyOption  @relation(fields: [jerseyId], references: [id])
  registration   Registration  @relation(fields: [registrationId], references: [id])
}

model Payment {
  id             Int          @id @default(autoincrement())
  registrationId Int
  transactionId  String       @unique
  proofOfPayment String
  status         String       @default("pending")
  paidAt         DateTime?
  amount         Decimal?     @db.Decimal(10, 2)
  createdAt      DateTime     @default(now())
  registration   Registration @relation(fields: [registrationId], references: [id])
}

model QrCode {
  id             Int             @id @default(autoincrement())
  registrationId Int
  categoryId     Int
  qrCodeData     String          @unique
  totalPacks     Int
  maxScans       Int
  scansRemaining Int
  createdAt      DateTime        @default(now())
  category       RaceCategory    @relation(fields: [categoryId], references: [id])
  registration   Registration    @relation(fields: [registrationId], references: [id])
  claims         RacePackClaim[]
}

model RacePackClaim {
  id                Int           @id @default(autoincrement())
  qrCodeId          Int
  claimedBy         String
  packsClaimedCount Int
  claimedAt         DateTime      @default(now())
  claimDetails      ClaimDetail[]
  qrCode            QrCode        @relation(fields: [qrCodeId], references: [id])
}

model ClaimDetail {
  id            Int           @id @default(autoincrement())
  claimId       Int
  participantId Int
  claim         RacePackClaim @relation(fields: [claimId], references: [id])
  participant   Participant   @relation(fields: [participantId], references: [id])
}
